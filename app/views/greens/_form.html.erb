<%= form_with(model: green, local: true) do |form| %>
  <% if green.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(green.errors.count, "error") %> prohibited this green from being saved:</h2>

      <ul>
        <% green.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= render partial: 'greens/period_checkbox', locals: { form: form, name: :sow_period } %>

    <%= render partial: 'greens/period_checkbox', locals: { form: form, name: :grow_period } %>

    <%= render partial: 'greens/period_checkbox', locals: { form: form, name: :harvest_period } %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
